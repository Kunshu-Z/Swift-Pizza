<style>
    <!-- Inline CSS for Login page -->
</style>

@if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
{
    <!-- Display an error message in an alert if it exists in ViewData. -->
    <div class="alert alert-danger">
        @ViewData["ErrorMessage"]
    </div>
}

<form method="post" action="@Url.Action("Login", "Auth")">
    <!-- Form for user login. The method is set to POST, and it submits to the "Login" action in the "Auth" controller. -->
    <!-- Email input -->
    <div class="form-group">
        <label for="Email">Email:</label>
        <input id="Email" name="Email" class="form-control" required />
        <!-- Input field for entering the email address. -->
    </div>

    <!-- Password input -->
    <div class="form-group">
        <label for="Password">Password:</label>
        <input id="Password" name="Password" type="password" class="form-control" required />
        <!-- Input field for entering the password. The input type is set to password for secure input. -->
    </div>

    <!-- Login button -->
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Login</button>
        <!-- A button to submit the form for login. -->
    </div>
</form>
