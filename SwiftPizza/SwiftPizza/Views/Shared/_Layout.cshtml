<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SwiftPizza</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SwiftPizza.styles.css" asp-append-version="true" />
</head>
<body id="page-body" style="background-image: url('https://i.imgur.com/5RkR7uh.png');
            background-size: 1900px 960px;
            background-repeat: no-repeat;
            background-attachment: fixed;
            margin: 0;
            padding: 0;
            color: white;">

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light navbar-bg border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Add the image and brand text -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color: white;">
                    <img src="https://i.imgur.com/lbhanft.jpeg" alt="SwiftPizza Logo" width="70" height="80">
                    SwiftPizza
                </a>
                <!-- Check if a user is logged in and display their name -->
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="navbar-text" style="color: white; margin-right: 10px;">
                        @User.Identity.Name
                    </div>
                }
                <!-- Rest of your navigation menu -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" style="color: white;">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy" style="color: white;">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <!-- Pizzas Menu -->
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Pizzas" style="color: white;">Pizzas</a>
                        </li>
                    </ul>
                    <!-- Clickable image that triggers dropdown -->
                    <div class="dropdown">
                        <!-- Trigger/image button -->
                        <img src="https://www.computerhope.com/jargon/g/guest-user.png" id="loginImageDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" width="70" height="80">

                        <!-- Dropdown Menu -->
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="loginImageDropdown">
                            <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Login">Sign in</a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            &copy; 2023 - SwiftPizza - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Ensure jQuery and Bootstrap JS are included -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
