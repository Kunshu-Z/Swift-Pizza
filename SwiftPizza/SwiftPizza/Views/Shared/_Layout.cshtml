@inject SwiftPizza.Data.ApplicationDbContext _dbContext

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SwiftPizza</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SwiftPizza.styles.css" asp-append-version="true" />
    <style>
        body {
            background-image: url('https://r4.wallpaperflare.com/wallpaper/9/310/369/pizza-food-vegetables-onion-wallpaper-38566dc820801c38801c113e3872141a.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            margin: 0;
            padding: 0;
            color: white;
        }

        .navbar-bg {
            background-color: #8B0000;
        }

        .navbar-light .navbar-nav .nav-link {
            color: white;
            border: 1px solid white;
            margin: 0 5px;
        }

        .navbar-light .navbar-brand {
            color: white;
        }

    </style>
</head>
<body id="page-body">

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light navbar-bg border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Add the image and brand text on the left -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://i.imgur.com/Sf4gR6y.png" alt="SwiftPizza Logo" width="70" height="80">
                    SwiftPizza
                </a>
                <!-- Rest of your navigation menu -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Pizzas">Pizza</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Cart">Cart</a>
                        </li>
                    </ul>
                    <div class="navbar-text" style="color:white">
                        @if (Context.Session.GetString("FirstName") != null)
                        {
                            <span>Welcome, @Context.Session.GetString("FirstName")!</span>
                        }
                    </div>

                    <div class="dropdown">
                        <!-- Trigger/image button -->
                        <img src="https://www.computerhope.com/jargon/g/guest-user.png" id="loginImageDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" width="70" height="80">

                        <!-- Dropdown Menu -->
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="loginImageDropdown">
                            @if (Context.Session.GetString("FirstName") != null)
                            {
                                <a class="dropdown-item" asp-area="" asp-controller="Auth" asp-action="Logout" style="color: black;">Sign out</a>
                            }
                            else
                            {
                                <a class="dropdown-item" asp-area="" asp-controller="Auth" asp-action="Login" style="color: black;">Sign in</a>
                            }
                        </div>
                    </div>


                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <!-- Ensure jQuery and Bootstrap JS are included -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
